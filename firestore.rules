// Firestore security rules (example baseline â€” tighten as needed)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /courses/{id} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        resource.data.ownerUid == request.auth.uid ||
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin','instructor']
      );
    }

    match /quizzes/{id} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.ownerUid ||
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin','instructor']
      );
    }

    match /attempts/{id} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /enrollments/{id} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /progress/{id} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    match /messages/{id} {
      allow read, write: if request.auth != null;
    }

    match /tasks/{id} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /profiles/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == uid ||
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'admin'
      );
    }

    match /roles/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'admin';
    }

    match /announcements/{id} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'admin';
    }

    match /payments/{id} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}