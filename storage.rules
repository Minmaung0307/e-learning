rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Public assets (e.g., /images, hosted files) â€“ read-only
    match /{allPaths=**} {
      allow read: if true;
    }

    // Avatars
    match /avatars/{uid}/{filename} {
      allow read: if true; // or restrict if you need
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Signatures
    match /signatures/{uid}/{filename} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}