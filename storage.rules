rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{uid}/{file} {
      allow read: if request.auth != null; // public avatars
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}