rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function myUid() { return request.auth.uid; }

    match /avatars/{uid}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && uid == myUid() && request.resource.contentType.matches('image/.*');
    }

    match /signatures/{uid}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && uid == myUid() && request.resource.contentType.matches('image/.*');
    }

    match /courseImages/{courseId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && request.resource.contentType.matches('image/.*');
    }

    match /{allPaths=**} { allow read, write: if false; }
  }
}